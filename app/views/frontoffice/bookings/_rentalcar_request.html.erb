<%= render(FieldGroup.new) do %>
  <%= render "components/field/date",
    attribute: :starts_on,
    f: f,
    value: booking_form.booking.starts_on
  %>

  <%= render "components/field/date",
    attribute: :ends_on,
    f: f,
    value: booking_form.booking.ends_on
  %>

  <%= render "components/field/select",
    attribute: :rentalcar_class,
    f: f,
    options: options_for_select(t("rentalcar_types"), f.object.rentalcar_class),
    required: true
  %>
<% end %>
