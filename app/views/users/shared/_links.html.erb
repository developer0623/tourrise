<ul class="Links">
  <%- if controller_name != 'sessions' %>
    <li class="Links-item"><%= link_to t("user.links.sign_in"), new_session_path(resource_name), class: "Links-link" %></li>
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <li class="Links-item"><%= link_to t("user.links.sign_up"), new_registration_path(resource_name), class: "Links-link" %></li>
  <% end -%>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <li class="Links-item"><%= link_to t("user.links.resend_unlock_instructions"), new_unlock_path(resource_name), class: "Links-link" %></li>
  <% end -%>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <li class="Links-item"><%= link_to t("user.links.sign_in_with_omniauth_provider", provider: OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider), class: "Links-link" %></li>
    <% end -%>
  <% end -%>
</ul>
