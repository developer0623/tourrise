<div class="sm:mx-auto sm:w-full sm:max-w-md">
  <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
    <%= t('devise.passwords.edit.change_your_password') %>
  </h2>
</div>

<div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
  <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
    <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6" } do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <%= render(Form::PasswordFieldComponent.new(f, :password, options: { autocomplete: 'new-password', required: true })) %>
      <%= render(Form::PasswordFieldComponent.new(f, :password_confirmation, options: { autocomplete: 'off', required: true })) %>

      <div>
        <%= render ButtonComponent.new do %>
          <%= t("devise.passwords.edit.change_my_password") %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
