<%= render "partials/booking_section",
  title: t("bookings.show.request.title"),
  headline_type: defined?(headline_type) ? headline_type : 2,
  link: defined?(link) ? link : nil do %>

  <% list = [{
      attr: Booking.human_attribute_name("starts_on"),
      val: booking.start_date
    }, {
      attr: Booking.human_attribute_name("ends_on"),
      val: booking.end_date
    }, {
      attr: Booking.human_attribute_name("adults"),
      val: booking.adults
    }, {
      attr: Booking.human_attribute_name("kids"),
      val: booking.kids
    }, {
      attr: Booking.human_attribute_name("babies"),
      val: booking.babies
    }] %>

  <%= render "bookings/show/data_list", multiple_cols: true, list: list %>
<% end %>
