<div class="Section">
  <div class="Form-elementGroup">
    <div class="Input">
      <%= f.label :name, class: "Input-label Input-label--required" %>
      <%= f.text_field :name, required: true, class: "Input-element Input-element--text", placeholder: "Unterkunft" %>
    </div>
  </div>
  <div class="Form-elementGroup">
    <div class="Input">
      <%= f.label :before_service_year, class: "Input-label Input-label--required" %>
      <%= f.text_field :before_service_year, required: true, class: "Input-element Input-element--text", placeholder: "8230" %>
    </div>
  </div>
  <div class="Form-elementGroup">
    <div class="Input">
      <%= f.label :during_service_year, class: "Input-label Input-label--required" %>
      <%= f.text_field :during_service_year, required: true, class: "Input-element Input-element--text", placeholder: "4830" %>
    </div>
  </div>
</div>

<div class="Form-buttons">
  <div class="Form-button">
    <a class="Button Button--secondary" href="<%= settings_financial_accounts_path %>"><%= t('abort') %></a>
  </div>
  <div class="Form-button">
    <button type="submit" class="Button"><%= t("save") %></button>
  </div>
</div>