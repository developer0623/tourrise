<div class="ListItem">
  <div class="ListItem-item ListItem-name"><%= locals[:index].ordinalize %> <%= Flight.model_name.human %></div>
  <div class="ListItem-item ListItem-name">
    <%= BookingFlightRequest.human_attribute_name(:outward_flight) %>: <%= "#{l(item.starts_on, format: :short)} #{item.departure_airport} #{item.destination_airport}" %><br>
    <%= BookingFlightRequest.human_attribute_name(:return_flight) %>: <%= "#{l(item.ends_on, format: :short)} #{item.destination_airport} #{item.departure_airport}" %>
  </div>
  <% unless current_user.id == FrontofficeUser.id %>
    <div class="ListItem-item ListItem-actions">
      <a class="IconButton IconButton--neutral" href="<%= new_booking_booking_resource_sku_path(@booking.id, resource_type_id: ResourceType.flight&.id) %>">
        <%= render "partials/icon", name: "add", title: t("add") %>
      </a>
    </div>
  <% else %>
    1x
  <% end %>
</div>
