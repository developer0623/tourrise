<form action="<%= assign_employee_booking_path(@booking) %>" method="POST" autocomplete="off">
  <%= t('bookings.not_assigned') %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
  <%= hidden_field_tag :user_id, current_user.id %>
  <input type="hidden" name="_method" value="patch">
  <span class="u-noWrap">
    (<button type="submit"><%= t("bookings.assign_to_me") %></button>)
  </span>
</form>
