<div>
  <div class="u-bold">
    <% if item.show_error_messages? %>
      <span class="u-colorNegative">
        <%= render "partials/icon", name: "fa-warning" %>
      </span>
    <% end %>

    <%= item.name %>
  </div>

  <div class="u-small">
    <% if item.with_date_range? %>
      <%= item.date_range %>
    <% end %>

    <% if item.starts_on && item.start_time %>
      <span class="u-noWrap"><%= l(item.starts_on, format: :long) %></span>
      -
      <span class="u-noWrap"><%= item.start_time %></span>
    <% end %>

    <% if item.with_date_and_time_range? %>
      &middot;
    <% end %>

    <% if item.with_time_range? %>
      <span class="u-noWrap">
        <%= item.start_time %> - <%= item.end_time %>
      </span>
    <% end %>
  </div>
</div>
