<% breadcrumb :bookings %>

<div class="Content">
  <%= render 'partials/content_heading', title: t("bookings.index.title", count: @bookings.total_count) do %>
    <%= link_to new_booking_path, class: 'Button Button--small' do %>
      <span class="Button-icon">
        <%= render "partials/icon", name: "add" %>
      </span>

      <span class="Button-label">
        <%= t("bookings.index.create_booking_link") %>
      </span>
    <% end %>
  <% end %>

  <div class="Content-main">
    <div class="Section">
      <%= render "partials/filter", options: @bookings.filter_options(product_id: params[:product_id], product_sku_id: params[:product_sku_id], status: params[:status]) %>

      <%= render "partials/table",
        list: @bookings,
        header: "bookings/table/header",
        row: "bookings/table/row"
      %>

      <%= paginate @bookings %>
    </div>
  </div>
</div>
