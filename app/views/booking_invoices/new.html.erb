<% turbo_exempts_page_from_cache %>

<% breadcrumb :booking_invoice_new, @booking_invoice.booking %>

<div class="Content">
  <div class="Content-main">
    <%= render "partials/content_heading", title: t("booking_invoices.new.headline", name: booking_invoice.booking.title) %>

    <% if !@booking_invoice.booking.booked? %>
      <div class="u-mt-1 u-mb-1">
        <%= link_to(
          new_booking_advance_booking_invoice_path,
          class: "Button Button--small Button--secondary"
        ) do %>
          <%= BookingInvoice.human_attribute_name(:advance_booking_invoice) %>
        <% end %>
      </div>
    <% end %>

    <div class="Form-elementGroup u-mb-3">
      <div class="Input-label">
        <%= t("booking_invoices.new.booking_calculated_price") %>
        <div class="Input-element">
          <%= booking_invoice.total_price %>
        </div>
      </div>
      <div class="Input-label">
        <%= t("booking_invoices.new.booking_starts_on") %>
        <div class="Input-element">
          <%= l(booking_invoice.booking.starts_on) %>
        </div>
      </div>
      <div class="Input-label">
        <%= t("booking_invoices.new.todays_date") %>
        <div class="Input-element">
          <%= l(Time.zone.today) %>
        </div>
      </div>
    </div>

    <%= render partial: 'form' %>
  </div>
</div>
