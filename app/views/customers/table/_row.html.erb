<tr>
  <td>
    <span class="Attr">
      <%= display_name(first_name: item.first_name, last_name: item.last_name) %>
    </span>
  </td>

  <td>
    <time datetime="<%= item.birthdate_iso8601 %>">
      <%= item.localized_birthdate %>
    </time>
  </td>

  <td>
    <%= item.bookings_count %>
  </td>

  <td>
    <%= item.bookings_total_price %>
  </td>

  <td class="u-textRight">
    <%= link_to t("show"), customer_path(item) %>
  </td>
</tr>
